{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
        "name": "PBRT",
        "type": "cppdbg",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/build/pbrt",
        "stopAtEntry": false,
        "externalConsole": false,
        // "logging": {
        //     "moduleLoad": false,
        //     "trace": true
        // },
        "setupCommands": [
            {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
            }],
        "args": ["../pbrt-v4-scenes/barcelona-pavilion/pavilion-day.pbrt", "-nthreads" ,"1"],
        "request": "launch"},

        {
          "name": "tests",
          "type": "cppdbg",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/build/pbrt_test",
          "stopAtEntry": false,
          "externalConsole": false,
          // "logging": {
          //     "moduleLoad": false,
          //     "trace": true
          // },
          "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }],
          "args": ["-nthreads" ,"1", "--test_filter", "Bounds2.Iterator*"],
          "request": "launch"
        },
        {
          "name": "exercises",
          "type": "cppdbg",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/build/pbrt_exercises",
          "stopAtEntry": false,
          "externalConsole": false,
          // "logging": {
          //     "moduleLoad": false,
          //     "trace": true
          // },
          "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }],
          "args": ["-nthreads" ,"1"],
          "request": "launch"
        }
      ],
}